<div class="container py-4">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <% if @transaction.image.attached? %>
      <div class="text-center p-3">
        <%= image_tag @transaction.image, class: "rounded", style: "width: 300px; height: 300px; object-fit: cover;" %>
      </div>
    <% end %>

    <div class="card-body">
      <h2 class="card-title mb-4"><%= @transaction.full_name %></h2>
      
      <h3 class="display-6 text-success mb-4">
        $<%= number_with_precision(@transaction.amount, precision: 2) %>
      </h3>

      <div class="d-flex gap-2">
        <%= link_to "Editar", edit_transaction_path(@transaction), class: "btn btn-primary" %>
        <%= link_to "Volver", transactions_path, class: "btn btn-secondary" %>
        <%= button_to "Eliminar", @transaction, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: '¿Estás seguro?' } } %>
      </div>
    </div>
  </div>
</div>
